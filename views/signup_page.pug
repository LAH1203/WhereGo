doctype html
html
    head
        meta(charset='utf-8')
        title Sign Up
        style
            include style.css
        script(src='/signup.js')
    body
        form(name='signup_form' action='/signup' method='post')
            center
                img(src='/logo_transparent_cut.png' class='form_mini_logo' style='cursor:pointer;' onclick="location.href='/main'")
                h2 회원가입
                hr
                div(style='height: 10px;')
                div
                    div
                        a(class='form_item_name') E-mail
                    div
                        input(type='email' name='email' placeholder='Enter E-mail' class='form_input')
                    div(class='form_text_alert_padding')
                        div(id='alert_email' class='form_text_alert')
                div
                    div
                        a(class='form_item_name') Password
                    div
                        input(type='password' name='password' placeholder='Enter password' class='form_input')
                    div(class='form_text_alert_padding')
                        div(id='alert_password' class='form_text_alert')
                div
                    div
                        a(class='form_item_name') Confirm Password
                    div
                        input(type='password' name='password2' placeholder='Confirm password' class='form_input')
                    div(class='form_text_alert_padding')
                        div(id='alert_confirmpassword' class='form_text_alert')
                div
                    div
                        a(class='form_item_name') Name
                    div
                        input(type='text' name='name' placeholder='Enter name' class='form_input')
                    div(class='form_text_alert_padding')
                        div(id='alert_name' class='form_text_alert')
                div
                    button(type='submit' class='form_button') 회원가입
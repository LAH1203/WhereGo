doctype html
html
    head
        meta(charset='utf-8')
        title My Reviews
        style
            include style.css
        script(src='/my_reviews.js')
    body
        center
            img(src='/logo_transparent_cut.png' class='form_mini_logo' style='cursor:pointer;' onclick="location.href='/main'")
            h2 내 후기
            hr
            form(name='my_reviews_form' action='/myReviews' method='get')
            -//div 내 후기 보기 성공!
            div(style='height: 10px;')
            -//for(var i = 0; i < result.length; i++)
            -for(i in result)
                div(class='form_search_place_name')= result[i].PLACE
                div(class='form_search_place_content')= result[i].CONTENT
                div(class='form_search_place_email')= result[i].user_email
                button(type='button' class='form_update_reviews_button' style='cursor:pointer;' value=`${result[i].num}` onclick='update_review(value)') 수정
                a  
                button(type='button' class='form_update_reviews_button' style='cursor:pointer;' value=`${result[i].num}` onclick='delete_review(value)') 삭제
                br
                br
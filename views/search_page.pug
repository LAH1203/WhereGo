doctype html
html
    head
        meta(charset='utf-8')
        title Search
        style
            include style.css
    body
        center
            img(src='/logo_transparent_cut.png' class='form_mini_logo' style='cursor:pointer;' onclick="location.href='/main'")
            h2 후기 검색
            hr
            form(name='search_form' action='/search' method='post')
                div(class='form_item_name') 장소명
                    input(type='search' name='place' class='form_input' placeholder='관광지명 (ex)경복궁')
                    input(type='submit' class='form_search_button' value='검색' style='cursor:pointer;')
            -if (result != null)
                div(style='height: 10px;')
                -for(var i = 0; i < result.length; i++)
                    div(class='form_search_place_name')= result[i].PLACE
                    div(class='form_search_place_content')= result[i].CONTENT
                    div(class='form_search_place_email')= result[i].user_email
                    -if(result[i].user_email == my_email)
                        button(type='button' class='form_update_reviews_button' style='cursor:pointer;' value=`${result[i].num}` onclick='update_review(value)') 수정
                        a  
                        button(type='button' class='form_update_reviews_button' style='cursor:pointer;' value=`${result[i].num}` onclick='delete_review(value)') 삭제
                    br
                    br
            -else
                div(style='height: 10px;')
                -for(var i = 0; i < all.length; i++)
                    div(class='form_search_place_name')= all[i].PLACE
                    div(class='form_search_place_content')= all[i].CONTENT
                    div(class='form_search_place_email')= all[i].user_email
                    -if(all[i].user_email == my_email)
                        button(type='button' class='form_update_reviews_button' style='cursor:pointer;' value=`${all[i].num}` onclick='update_review(value)') 수정
                        a  
                        button(type='button' class='form_update_reviews_button' style='cursor:pointer;' value=`${all[i].num}` onclick='delete_review(value)') 삭제
                    br
                    br